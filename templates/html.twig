{% if request.isBare %}
  {{content}}
{% else %}

  <!DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link href="https://cdn.jsdelivr.net/npm/beercss@2.2.3/dist/cdn/beer.min.css" rel="stylesheet">
      <script src="https://unpkg.com/htmx.org@1.8.0"></script>
      <script src="https://unpkg.com/hyperscript.org@0.9.7"></script>
      <title>Oyori</title>
      <style>:root
      ,
      body.dark {
        --primary: #53dbc9;
        --on-primary: #003730;
        --primary-container: #005047;
        --on-primary-container: #74f7e5;
        --secondary: #b1ccc6;
        --on-secondary: #1c3531;
        --secondary-container: #334b47;
        --on-secondary-container: #cde8e2;
        --tertiary: #adcae6;
        --on-tertiary: #153349;
        --tertiary-container: #2d4960;
        --on-tertiary-container: #cbe5ff;
        --error: #ffb4a9;
        --error-container: #930006;
        --on-error: #680003;
        --on-error-container: #ffdad4;
        --background: #191c1b;
        --on-background: #e0e3e1;
        --surface: #191c1b;
        --on-surface: #e0e3e1;
        --surface-variant: #3f4947;
        --on-surface-variant: #bfc9c6;
        --outline: #889390;
        --inverse-on-surface: #191c1b;
        --inverse-surface: #e0e3e1;
        --inverse-primary: #006a5f;
        --shadow: #000000;
      }

      p {
        font-size: 1.1em;
      }
    </style>
  </head>
  <body class="dark">
    {% macro selectedPath(path: string, isIndex = false): string = %}
      {% if path in request.path or (isIndex and request.path == "/")%}
        primary elevate
      {% else %}
        transparent
      {% endif %}
    {% endmacro %}
    <nav class="padding elevate row scroll" hx-boost="true">
      <div class="space m l"></div>
      {# <img src="logo.png" height="24"> #}
      <a href="/" class='button {{selectedPath("index page", isIndex=true)}}'>
        Home
      </a>
      <a href="/manga" class='button {{selectedPath("manga")}}'>
        Manga
      </a>
      <a href="/post" class='button {{selectedPath("post")}}'>
        News
      </a>
      <div class="max m l"></div>
      <a href="/donate" class='button {{selectedPath("donate")}}'>
        Donate
      </a>
      <div class="space m l"></div>
    </nav>
    <main class="responsive active bottom page">
      {{content}}
    </main>
  </body>
</html>{% endif %}
